{
  "python.REPL.enableREPLSmartSend": false,
  "python.defaultInterpreterPath": "${workspaceFolder}/python/.venv/bin/python",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.rulers": [88]
  },
  "python.analysis.typeCheckingMode": "basic",
  "typescript.preferences.importModuleSpecifier": "relative",
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "disabled"
  },
  "yaml.schemaStore.enable": false,
  "yaml.schemas": {
    "./rust/generated/jsonschema/MicrosoftSentinelMacroCRD.json": "/**/*/microsoft_sentinel/macros/*.yaml",
    "./rust/generated/jsonschema/MicrosoftSentinelDetectionRuleCRD.json": "/**/*/microsoft_sentinel/detection_rules/*.yaml",
    "./rust/generated/jsonschema/MicrosoftSentinelAutomationRuleCRD.json": "/**/*/microsoft_sentinel/automation_rules/*.yaml"
  }
}
